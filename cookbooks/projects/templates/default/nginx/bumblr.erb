server {
  listen 80;
  server_name bumblr.io www.bunblr.io beerkeg.rocodev.net;

  root /home/apps/bumblr/current/public;
  passenger_enabled on;

  access_log /var/log/nginx/bumblr/access.log;
  error_log  /var/log/nginx/bumblr/error.log;

  location ~* \.(?:ico|css|js|gif|jpe?g|png|woff)$ {
    expires max;
    add_header Pragma public;
    add_header Cache-Control "public, must-revalidate, proxy-revalidate";
  }

}
